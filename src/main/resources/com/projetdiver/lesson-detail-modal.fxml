<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.projetdiver.lesson.controllers.LessonDetailModalController" stylesheets="@styles/lessonDetailModalStyle.css">
    <Label fx:id="detailsLabel" />
    <Button fx:id="deleteButton" onAction="#handleDeleteButton" text="Delete" visible="false" />
   <Button fx:id="setButton" onAction="#handleUpdateButton" text="Set" visible="false" />
   <Button fx:id="subscribeButton" mnemonicParsing="false" onAction="#subscribeToTheLesson" text="Subscribe" visible="false" />
   <Button fx:id="unsubscribeButton" mnemonicParsing="false" onAction="#unsubscribeToTheLesson" text="Unsubscribe" visible="false" />
   <Label fx:id="errorLabel" textFill="RED" />
</VBox>
