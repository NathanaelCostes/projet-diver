<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projetdiver.lesson.controllers.LessonModificationController"
            prefHeight="400.0" prefWidth="600.0">



    <GridPane alignment="CENTER" hgap="10" layoutX="43.0" layoutY="40.0" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints />
        </rowConstraints>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ChoiceBox fx:id="typeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Button alignment="BOTTOM_RIGHT" onAction="#modifyLesson" text="Modify Lesson" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Label fx:id="errorLabel" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>


</AnchorPane>
