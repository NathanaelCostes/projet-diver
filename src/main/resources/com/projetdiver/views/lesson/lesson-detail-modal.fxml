<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetdiver.lesson.controllers.LessonDetailModalController">
   <center>
      <VBox>
         <Label fx:id="dateLabel" />
         <Label fx:id="typeLabel" />
          <Label fx:id="detailsLabel" />
          <Button fx:id="deleteButton" onAction="#handleDeleteButton" text="Delete" visible="false" />
         <Button fx:id="setButton" onAction="#handleUpdateButton" text="Set" visible="false" />
         <Button fx:id="subscribeButton" mnemonicParsing="false" onAction="#subscribeToTheLesson" text="Subscribe" visible="false" />
         <Button fx:id="unsubscribeButton" mnemonicParsing="false" onAction="#unsubscribeToTheLesson" text="Unsubscribe" visible="false" />
         <Label fx:id="errorLabel" textFill="RED" />
      </VBox>
   </center>
   <top>
      <Label fx:id="titleLabel" prefHeight="35.0" prefWidth="91.0" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
</BorderPane>
