<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetdiver.lesson.controllers.LessonCreationController">
   <center>

       <GridPane alignment="CENTER" hgap="10" vgap="10">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints />
           </rowConstraints>

           <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <opaqueInsets>
               <Insets left="2.0" />
            </opaqueInsets></Label>
           <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

           <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <opaqueInsets>
               <Insets left="2.0" />
            </opaqueInsets></Label>
           <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
           <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <opaqueInsets>
               <Insets left="2.0" />
            </opaqueInsets></Label>
           <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
           <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <opaqueInsets>
               <Insets left="2.0" />
            </opaqueInsets></Label>
           <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
           <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4">
            <opaqueInsets>
               <Insets left="2.0" />
            </opaqueInsets></Label>
           <ChoiceBox fx:id="typeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      
           <Button alignment="BOTTOM_RIGHT" onAction="#createLesson" text="Create Lesson" GridPane.columnIndex="2" GridPane.rowIndex="5" />
         <Label fx:id="errorLabel" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="5" />
       </GridPane>
   </center>
   <top>
      <Label text="Create a Lesson" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font></Label>
   </top>
</BorderPane>
