<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" stylesheets="@../../styles/signupStyle.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetdiver.diver.controllers.SignupController">
    <center>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label style="-fx-text-fill: #008080; -fx-font-size: 14.0;" text="First Name" GridPane.columnIndex="0" />
                <TextField fx:id="firstNameTextField" maxWidth="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" />
                <Label style="-fx-text-fill: #008080; -fx-font-size: 14.0;" text="Last Name" GridPane.rowIndex="1" />
                <TextField fx:id="lastNameTextField" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label style="-fx-text-fill: #008080; -fx-font-size: 14.0;" text="Email" GridPane.rowIndex="2" />
                <TextField fx:id="emailTextField" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label style="-fx-text-fill: #008080; -fx-font-size: 14.0;" text="Password" GridPane.rowIndex="3" />
                <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" text="" visible="true" />
            <Button mnemonicParsing="false" onAction="#onAction" style="-fx-background-color: #008080; -fx-text-fill: white;" text="Submit">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin></Button>
         <Button onAction="#goToLogin" styleClass="link-button" mnemonicParsing="false" text="Already registered ? Log in here !" />
        </VBox>
    </bottom>
    <top>
        <Label style="-fx-text-fill: #008080; -fx-font-size: 36.0;" text="Sign Up" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="25.0" />
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
